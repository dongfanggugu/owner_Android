<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_elevator_mall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context="com.honyum.owner.activity.dtsc.ElevatorMallActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout

                android:id="@+id/ll_ztxs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginRight="45dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/market_1"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_market_item1"
                    android:textColor="@color/white"
                    android:text="整梯销售"
                    android:gravity="center"
                    android:textSize="13sp"
                    />

            </RelativeLayout>

            <RelativeLayout

            android:id="@+id/ll_dtpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:scaleType="fitXY"
                android:src="@drawable/market_2"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_market_item2"
                android:textColor="@color/white"
                android:text="电梯配件"
                android:gravity="center"
                android:textSize="13sp"
                />

        </RelativeLayout>

            <RelativeLayout

                android:id="@+id/ll_dtzh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginRight="45dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/market_2"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_market_item3"
                    android:textColor="@color/white"
                    android:text="电梯装潢"
                    android:gravity="center"
                    android:textSize="13sp"
                    />

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
