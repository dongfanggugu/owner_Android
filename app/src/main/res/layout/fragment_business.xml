<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.honyum.owner.fragment.BusinessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/banner_view"
            layout="@layout/layout_banner"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_maintenance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/main_page_icon_size"
                    android:layout_height="@dimen/main_page_icon_size"
                    android:src="@drawable/icon_main_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="电梯管家" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_repair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/main_page_icon_size"
                    android:layout_height="@dimen/main_page_icon_size"
                    android:src="@drawable/icon_repair_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="急修服务" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_elevator_insurance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/main_page_icon_size"
                    android:layout_height="@dimen/main_page_icon_size"
                    android:src="@drawable/icon_ensure_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="1元大保障" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_elevator_nous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/main_page_icon_size"
                    android:layout_height="@dimen/main_page_icon_size"
                    android:src="@drawable/icon_knowledge_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="电梯常识" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_elevator_mall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/main_page_icon_size"
                    android:layout_height="@dimen/main_page_icon_size"
                    android:src="@mipmap/icon_dtsc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="电梯商城" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_value_added_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/main_page_icon_size"
                    android:layout_height="@dimen/main_page_icon_size"
                    android:src="@drawable/icon_other_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="增值服务" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#f1f1f1"
            android:orientation="vertical"
            android:paddingTop="4dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="15dp"
                android:src="@drawable/five_star"
                android:layout_gravity="center"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fbc926"
                android:textSize="13sp"
                android:text="———————— 五星级维保企业 ————————"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/honyum_logo"
                    android:layout_gravity="center"
                    />

                </LinearLayout>

        </LinearLayout>


        <include
            layout="@layout/layout_home_process"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </LinearLayout>

</ScrollView>
